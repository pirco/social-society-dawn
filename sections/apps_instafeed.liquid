<div class="{% if section.settings.include_margins %}page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- for block in section.blocks -%}
    {% if block.type contains 'app' %}
      <div class="instafeed-block" style="display: flex;">
        <div class="instafeed-block-intro">this is a block for insta feed app only</div>
        <div>
    {% endif %}
    {% render block %}
    {% if block.type contains 'app' %}
      </div>
      </div>
    {% endif %}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "instafeed app block",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "instafeed app block"
    }
  ]
}
{% endschema %}
