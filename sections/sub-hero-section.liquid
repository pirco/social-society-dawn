{{ 'section-sub-hero.css' | asset_url | stylesheet_tag }}
<div
  class="collection-interjection color-{{ color }}"
  style="background-color: var(--color-{{ color }});"
>
  <div
    class="grid grid--gapless grid--1-col grid--2-col-tablet section-hero--color-scheme-{{ section.settings.color }}"
    style="background-color: var(--color-{{ section.settings.color }});"
  >
    <div class="image grid__item">
      <img src="{{ section.settings.image | image_url: width: 700 }}">
    </div>
    <div class="text grid__item">
      {%- if section.settings.title != blank -%}
        <h2 class="heading {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
      {%- endif -%}

      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'content' -%}
            <div class="grid__item section-sub-hero--content">
              <div class="titles">
                {% if block.settings.subtitle != blank %}
                  <div class="subtitle">{{ block.settings.subtitle }}</div>
                {% endif %}
              </div>
              {% if block.settings.text != blank %}
                <div class="description">{{ block.settings.text }}</div>
              {% endif %}
            </div>
        {% endcase %}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sub-hero",
  "tag": "section",
  "class": "section sub-hero",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "This is a Sub-Hero",
      "label": "t:sections.multicolumn.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color",
      "options": [
        {
          "value": "violet",
          "label": "Violet"
        },
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "blue",
          "label": "Blue"
        },
        {
          "value": "deep-blue",
          "label": "Deep blue"
        },
        {
          "value": "pink",
          "label": "Pink"
        },
        {
          "value": "green",
          "label": "Green"
        },
        {
          "value": "red",
          "label": "Red"
        },
        {
          "value": "teal",
          "label": "Teal"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content",
      "limit": 2,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "subtitle",
          "default": "Sub title",
          "label": "Sub title"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.multicolumn.blocks.column.settings.text.label"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "t:sections.multicolumn.blocks.column.settings.link_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.multicolumn.blocks.column.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sub-hero",
      "blocks": [
        {
          "type": "content"
        }
      ]
    }
  ]
}
{% endschema %}
